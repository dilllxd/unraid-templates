<?xml version="1.0"?>
<Container version="2">
  <Name>obs-distroav</Name>
  <Repository>ghcr.io/dilllxd/obs-distroav:intel</Repository>
  <Registry>https://github.com/dilllxd/obs-distroav</Registry>
  <Network>br0</Network>
  <Shell>sh</Shell>
  <Privileged>false</Privileged>
  <Support>https://github.com/dilllxd/obs-distroav/issues</Support>
  <Project>https://github.com/dilllxd/obs-distroav</Project>
  <Overview>OBS Studio with GPU acceleration and noVNC. Change Repository tag to :intel, :amd, or :nvidia to match your GPU.</Overview>
  <Description>OBS Studio with GPU acceleration and a web VNC UI. Select the appropriate image tag for your GPU.</Description>
  <Category>MediaApp:Video Tools:Utilities</Category>
  <License>MIT</License>
  <ReadMe>https://raw.githubusercontent.com/dilllxd/obs-distroav/HEAD/README.md</ReadMe>
  <Requires>Host GPU: /dev/dri for Intel/AMD or NVIDIA Container Toolkit for NVIDIA; use br0/bridge with ports 5900 and 6081 published; &gt;=512MB shm.</Requires>
  <WebUI>http://[IP]:[PORT:6081]/vnc.html</WebUI>
  <Icon>https://obsproject.com/assets/images/new_icon_small-r.png</Icon>

  <!-- Ports -->
  <Config Name="VNC" Target="5900" Default="5900" Mode="tcp" Description="Port for VNC" Type="Port" Display="advanced" Required="false" Mask="false">5900</Config>
  <Config Name="noVNC" Target="6081" Default="6081" Mode="tcp" Description="Port for noVNC" Type="Port" Display="always" Required="false" Mask="false">6081</Config>

  <!-- AppData -->
  <Config Name="OBS config path" Target="/root/.config/obs-studio" Default="/mnt/user/appdata/obs-distroav" Mode="rw" Description="Path for storing OBS config data" Type="Path" Display="always" Required="true" Mask="false">/mnt/user/appdata/obs-distroav</Config>

  <!-- Vars -->
  <Config Name="VNC_PASSWORD" Target="VNC_PASSWORD" Default="" Mode="" Description="Optional VNC password" Type="Variable" Display="always" Required="false" Mask="true"/>
  <Config Name="RESOLUTION" Target="RESOLUTION" Default="1920x1080" Mode="" Description="Display resolution (WIDTHxHEIGHT)" Type="Variable" Display="advanced" Required="false" Mask="false"/>
  <Config Name="DEBUG" Target="DEBUG" Default="0" Mode="" Description="Verbose startup logs (0/1)" Type="Variable" Display="advanced" Required="false" Mask="false"/>

  <!-- Devices -->
  <Config Name="GPU Device (/dev/dri)" Target="/dev/dri" Default="/dev/dri" Mode="rw"
          Description="Intel/AMD only: map /dev/dri for VAAPI/QSV. NVIDIA users can ignore."
          Type="Device" Display="always" Required="false" Mask="false"/>

  <!-- NVIDIA vars -->
  <Config Name="NVIDIA_VISIBLE_DEVICES" Target="NVIDIA_VISIBLE_DEVICES" Default=""
          Mode="" Description="NVIDIA only: set to 'all' or a GPU UUID. Intel/AMD leave empty."
          Type="Variable" Display="advanced" Required="false" Mask="false"/>
  <Config Name="NVIDIA_DRIVER_CAPABILITIES" Target="NVIDIA_DRIVER_CAPABILITIES" Default="compute,video,utility,graphics"
          Mode="" Description="NVIDIA only: capabilities for container runtime."
          Type="Variable" Display="advanced" Required="false" Mask="false"/>

  <!-- Branches: only swap the image -->
  <Branch>
    <Tag>intel</Tag>
    <TagDescription>Intel GPU (VAAPI/QSV)</TagDescription>
    <Repository>ghcr.io/dilllxd/obs-distroav:intel</Repository>
  </Branch>
  <Branch>
    <Tag>amd</Tag>
    <TagDescription>AMD GPU (VAAPI)</TagDescription>
    <Repository>ghcr.io/dilllxd/obs-distroav:amd</Repository>
  </Branch>
  <Branch>
    <Tag>nvidia</Tag>
    <TagDescription>NVIDIA GPU (NVENC)</TagDescription>
    <Repository>ghcr.io/dilllxd/obs-distroav:nvidia</Repository>
  </Branch>
</Container>
